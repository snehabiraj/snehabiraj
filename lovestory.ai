        <nav>
            <ul>
                <li><a href="#home">Home</a></li>
                <li><a href="#memories">Memories</a></li>
                <li><a href="#love-letters">Love Letters</a></li>
                <li><a href="#gallery">Gallery</a></li>
                <li><a href="#special-moments">Special Moments</a></li>
            </ul>
